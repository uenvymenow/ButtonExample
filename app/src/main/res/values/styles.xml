<resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>

        <!-- Sin MainActivity TextView Styling -->
        <style name="sinTextViewStyle">
            <item name="android:paddingLeft">8dp</item>
            <item name="android:background">#000000</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:gravity">center</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">18sp</item>
        </style>

        <!-- Blood MainActivity TextView Styling -->
        <style name="bloodTextViewStyle">
            <item name="android:paddingLeft">8dp</item>
            <item name="android:background">#FF0000</item>
            <item name="android:textColor">#000000</item>
            <item name="android:gravity">center</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">18sp</item>
        </style>

        <!-- SinActivity header styling -->
        <style name="sinHeader">
            <item name="android:gravity">center_horizontal</item>
            <item name="android:textSize">24sp</item>
            <item name="android:paddingTop">8dp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- SinActivity Scripture Styling -->
        <style name="sinScripture">
            <item name="android:gravity">center_horizontal</item>
        </style>

        <!-- BloodActivity header styling -->
        <style name="bloodHeader">
            <item name="android:gravity">center_horizontal</item>
            <item name="android:textSize">24sp</item>
            <item name="android:paddingTop">8dp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- BloodActivity Scripture Styling -->
        <style name="bloodScripture">
            <item name="android:gravity">center_horizontal</item>
        </style>
    </resources>
